{
  "compilerOptions": {
    "module": "ES6",
    "lib": ["es6", "dom"],
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "dist/types/",
    "jsx": "react",
    "jsxFactory": "Halley",
    "jsxFragmentFactory": "Fragment"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}